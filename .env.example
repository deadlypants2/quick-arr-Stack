# Your timezone, https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=Europe/Amsterdam
# UNIX PUID and PGID, find with: id $USER
PUID=1000
PGID=1000
# The directory where configuration will be stored.
ROOT=/etc/arr-stack
# The directory where data will be stored.
HDDSTORAGE=/mnt/data


########################### listsync settings ##################

OVERSEERR_API_KEY=your_overseerr_api_key_here
OVERSEERR_URL=https://your-overseerr-url.com/
OVERSEERR_USER_ID=1
OVERSEERR_4K=false

TRAKT_CLIENT_ID=your_trakt_client_id_here
TMDB_KEY=your_api_key_here
TVDB_KEY=your_api_key_here

AUTOMATED_MODE=true
SYNC_INTERVAL=24
DISCORD_WEBHOOK_URL=


 ── IMDb Lists ──
# Formats: 'top', or list IDs like 'ls026785255'
IMDB_LISTS=

# ── Trakt Lists ──
# Format: https://app.trakt.tv/users/{user}/lists/{name}
TRAKT_LISTS=

# ── Trakt Special Lists ──
# Format: type:category (e.g., trending:movies, popular:shows)
TRAKT_SPECIAL_LISTS=
TRAKT_SPECIAL_ITEMS_LIMIT=20

# ── Letterboxd Lists ──
# Format: https://letterboxd.com/{user}/list/{name}/
LETTERBOXD_LISTS=

# ── AniList Anime Lists ── 
# Format: https://anilist.co/user/{username}/animelist or just {username}
# For specific status: https://anilist.co/user/{username}/animelist/Planning
# Supported statuses: Planning, Watching, Completed, Paused, Dropped
ANILIST_LISTS=

# ── MDBList Collections ──
# Format: https://mdblist.com/lists/{user}/{name}
MDBLIST_LISTS=

# ── Steven Lu Lists ──
# Options: 'stevenlu'
STEVENLU_LISTS=

# ── TMDB Lists ──
# API Key recommended for faster processing, web scraping used if not present
TMDB_KEY=
# Format: https://www.themoviedb.org/list/{id-name}
TMDB_LISTS=

# ── TVDB Lists ──
# Format: https://www.thetvdb.com/lists/{idorname}
TVDB_LISTS=

# ── SIMKL Lists ──
# Format: https://simkl.com/{id}/list/{id}/{name}
SIMKL_LISTS=